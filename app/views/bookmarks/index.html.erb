<div class="container mt-5">
  <div class="row justify-content-center">
      <div class="d-flex justify-content-between align-items-center">
        <h1>All comments</h1>
        <%= link_to 'New comment', new_list_bookmark_path, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-6">
        <ul class="list-group">
          <% @bookmarks.each do |bookmark| %>
            <li class="list-group-item"><%= bookmark.comment %><%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, data_confirm: 'Are you sure?' }, class: "text-white btn btn-danger ms-3" %></li>
          <% end %>
        </ul>
      </div>
      </div>
  </div>
</div>
