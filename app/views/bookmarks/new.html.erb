<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="d-flex justify-content-between align-items-center">
        <h1>New Comment</h1>
        <%= link_to 'Back', list_bookmarks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card mt-4">
        <div class="card-body">
          <%= render 'form', list: @list, bookmark: @bookmark %>
        </div>
      </div>
    </div>
  </div>
</div>
