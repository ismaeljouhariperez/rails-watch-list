  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1><%= @list.name %></h1>
        <%= link_to 'Edit list', edit_list_path(@list), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
