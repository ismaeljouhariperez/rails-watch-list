<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1>My Lists</h1>
        <%= link_to 'New List', new_list_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12">
        <%= link_to list.name, list_path(list), class: "btn btn-secondary my-2" %>
      </div>
    <% end %>

</div>
